# NutriScan Environment Variables Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nutriscan_dev
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here

# Full JDBC URL (alternative to individual DB vars)
# SPRING_DATASOURCE_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}

# ============================================
# JWT SECURITY
# ============================================
# Generate a strong secret with: openssl rand -base64 64
JWT_SECRET=change-this-to-a-very-long-random-secret-at-least-256-bits
JWT_EXPIRATION_MS=86400000

# ============================================
# EDAMAM API (Natural Foods)
# ============================================
EDAMAM_NUTRITION_APP_ID=2f1a97ee
EDAMAM_NUTRITION_APP_KEY=a142242e62efb0ad2b8f7ecfd48d81f5

# Edamam Nutrition Analysis API (Meal Analysis)
EDAMAM_ANALYSIS_APP_ID=2f1a97ee
EDAMAM_ANALYSIS_APP_KEY=a142242e62efb0ad2b8f7ecfd48d81f5

# ============================================
# GEMINI AI
# ============================================
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================
# OPENFOODFACTS
# ============================================
# No API key needed, but good practice to set user agent
OPENFOODFACTS_USER_AGENT=NutriScan/1.0

# ============================================
# SERVER CONFIGURATION
# ============================================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# ============================================
# LOGGING
# ============================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_NUTRISCAN=DEBUG

# ============================================
# OPTIONAL: REDIS (for caching)
# ============================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ============================================
# OPTIONAL: EMAIL (for notifications)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ============================================
# OPTIONAL: CLOUD STORAGE
# ============================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=nutriscan-uploads

# ============================================
# PRODUCTION SETTINGS (when deploying)
# ============================================
# SPRING_PROFILES_ACTIVE=prod
# SPRING_JPA_SHOW_SQL=false
# LOGGING_LEVEL_NUTRISCAN=INFO

